const express = require("express");
const axios = require("axios");
const app = express();

app.use(express.json());

// Ganti URL webhook Discord kamu di sini
const DISCORD_WEBHOOK = "https://discord.com/api/webhooks/1423855527045365820/P5zdXmqCVmlKfgeJuyRnA8BM2RBj6wDK6HYEKWvpPAurndFfErMr298rrQB4Smu018vA";

app.post("/relay", async (req, res) => {
  try {
    const body = req.body;
    await axios.post(DISCORD_WEBHOOK, body);
    res.json({ success: true, message: "Sent to Discord ✅" });
  } catch (err) {
    res.status(500).json({ success: false, message: "Failed to send ❌" });
  }
});

app.listen(3000, () => console.log("Relay aktif di port 3000 🚀"));
